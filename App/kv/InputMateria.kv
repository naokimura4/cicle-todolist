<InputMateria>:
    spacing: 10
    padding: 20
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        Label:
            text: "Nome da Matéria:"
            font_size: 18

        TextInput:
            id: nome_materia
            hint_text: "Digite o nome da matéria"	
        Label:
            text: "Nível de Dificuldade:"
            font_size: 18
        Spinner:
                id: spinner_diff
                text: "Selecione"
                values: ["1 - Péssimo", "2 - Ruim", "3 - Mediano", "4 - Bom", "5 - Excelente"]
        Button:
            text: "Salvar"
            size_hint: (1,0.5)
            on_release: root.salvar_materia()