<Gerenciador>:
    Menu:
        name: 'menu'
    InputMateria: 
        name: 'materia'
    TelaHorario:
        name: 'horario'

<Menu>:
    orientation: 'vertical'
    padding: 20
    spacing: 10
    Label: 
        text: "Ciclo de Estudos"
        font_size: 40
    BoxLayout:    
        Button:
            text: "Adicionar Matéria"
            on_release: app.root.current = 'materia'  # Corrigido
        Button:
            text: "Ajustar Horário"
            on_release: app.root.current = 'horario'  # Corrigido
        Button: 
            text: "Ver Ciclo"
            # Adicionar Tela do Ciclo
        Button:
            text: "Sair"
            on_release: app.stop()

<InputMateria>:
    spacing: 10
    padding: 20
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        Label:
            text: "Nome da Matéria:"
            font_size: 18

        TextInput:
            id: nome_materia
            hint_text: "Digite o nome da matéria"	
        Label:
            text: "Nível de Dificuldade:"
            font_size: 18
        Spinner:
            id: spinner_diff
            text: "Selecione"
            values: ["1 - Péssimo", "2 - Ruim", "3 - Mediano", "4 - Bom", "5 - Excelente"]
        Button:
            text: "Salvar"
            size_hint: (1,0.5)
            on_release: root.salvar_materia()

<TelaHorario>:
    dias_input: dias_input
    horas_input: horas_input
    resultado_label: resultado_label

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Calculadora de Carga Horária"
            font_size: 24

        BoxLayout:
            orientation: 'horizontal'

            Label:
                text: "Dias:"
                size_hint_x: 0.4

            TextInput:
                id: dias_input
                hint_text: "Ex: 5"
                input_filter: "int"

        BoxLayout:
            orientation: 'horizontal'

            Label:
                text: "Horas por Dia:"
                size_hint_x: 0.4

            TextInput:
                id: horas_input
                hint_text: "Ex: 8"
                input_filter: "int"

        Button:
            text: "Calcular Carga Horária"
            size_hint: (1, 0.3)
            on_press: root.calcular_carga_horaria()

        Label:
            id: resultado_label
            text: "Carga Horária: "
            font_size: 18
